{
  "name": "kasia",
  "private": true,
  "version": "0.2.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:production": "tsc -b && vite build ",
    "build:staging": "tsc -b && vite build --mode staging",
    "build:netlify": "npm run wasm:setup && npm run build:production",
    "lint": "eslint .",
    "format": "prettier --check .",
    "format:fix": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "type-check": "tsc --noEmit",
    "preview": "vite preview",
    "tauri": "tauri",
    "wasm:build": "cd cipher && wasm-pack build --target web --release -d ../cipher-wasm && cd ..",
    "wasm:setup": "curl -L -o kaspa-wasm32-sdk.zip https://github.com/kaspanet/rusty-kaspa/releases/download/v1.0.0/kaspa-wasm32-sdk-v1.0.0.zip && unzip -o kaspa-wasm32-sdk.zip && cp -r kaspa-wasm32-sdk/* wasm/ && rm -rf kaspa-wasm32-sdk kaspa-wasm32-sdk.zip && echo 'WASM files downloaded and extracted'",
    "prepare": "node .husky/install.mjs"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.1",
    "@tailwindcss/vite": "^4.1.3",
    "@types/uuid": "^10.0.0",
    "cipher": "file:cipher-wasm",
    "clsx": "^2.1.1",
    "eventemitter3": "^5.0.1",
    "jsqr": "^1.4.0",
    "kaspa-wasm": "file:wasm",
    "lucide-react": "^0.525.0",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-router": "^7.5.0",
    "react-router-dom": "^7.6.0",
    "uuid": "^11.1.0",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@tauri-apps/cli": "^2.5.0",
    "@types/node": "^22.15.18",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.5.1",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.0.7",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.4",
    "postcss-preset-env": "^10.2.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^4.1.8",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.0.1",
    "vite-plugin-sri3": "1.0.6"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "4.42.0",
    "lightningcss-linux-x64-gnu": "1.30.1"
  }
}
